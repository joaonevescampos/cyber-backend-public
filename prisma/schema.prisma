generator client {
  provider = "prisma-client-js"
  //output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id               Int     @id @default(autoincrement())
  name             String
  description      String
  brand            String
  price            Float
  discounted_price Float?
  stock            Int
  url_image        String?
  tag              String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  id_category Int
  category    Category @relation(fields: [id_category], references: [id])

  id_specs_smartphone Int?             @unique
  specs               SmartphoneSpecs? @relation(fields: [id_specs_smartphone], references: [id])

  reviews Review[]

  colors ProductColor[]

  storage_options StorageOption[]

  itensShoppingCart ItensShoppingCart[]

  @@map("products")
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  url_icon    String   @default("")
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  product Product[]

  @@map("categories")
}

model SmartphoneSpecs {
  id           Int      @id @default(autoincrement())
  screen_size  String
  cpu          String
  total_cores  String
  main_camera  String
  front_camera String
  battery      String
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  product Product?

  @@map("smartphone_specs")
}

model Review {
  id             Int      @id @default(autoincrement())
  rating         Int
  message        String
  name_user      String
  url_image_user String?
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  id_product Int
  product    Product @relation(fields: [id_product], references: [id])

  @@map("reviews")
}

model ProductColor {
  id         Int      @id @default(autoincrement())
  hex_code   String
  name       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  id_product Int
  product    Product @relation(fields: [id_product], references: [id])

  @@map("product_colors")
}

model StorageOption {
  id         Int      @id @default(autoincrement())
  size       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  id_product Int
  product    Product @relation(fields: [id_product], references: [id])

  @@map("storage_options")
}

model ShoppingCart {
  id        Int                 @id @default(autoincrement())
  userId    String
  status    String              @default("active")
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt
  items     ItensShoppingCart[]

  @@map("shopping_cart")
}

model ItensShoppingCart {
  id             Int @id @default(autoincrement())
  shoppingCartId Int @map("shopping_cart_id")
  productId      Int @map("product_id")
  quantity       Int

  shoppingCart ShoppingCart @relation(fields: [shoppingCartId], references: [id])
  product      Product      @relation(fields: [productId], references: [id])

  @@unique([shoppingCartId, productId])
  @@map("itens_shopping_cart")
}
