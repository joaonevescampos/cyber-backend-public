{
  "openapi": "3.0.0",
  "info": {
    "title": "Cyber-Web Project API",
    "version": "1.0.0",
    "description": "RESTful API documentation for the Cyber ​​e-commerce platform."
  },
  "servers": [
    {
      "url": "http://localhost:{port}/api",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/products/tag/{tag_name}": {
      "get": {
        "summary": "Retrieve products by a specific tag",
        "description": "Returns a list of product cards filtered by a given tag name.",
        "parameters": [
          {
            "in": "path",
            "name": "tag_name",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "new_arrival",
                "bestseller",
                "featured_products",
                "discount_up_to_50"
              ]
            },
            "description": "The tag name to filter products by."
          }
        ],
        "responses": {
          "200": {
            "description": "A list of products successfully retrieved.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/ProductCard"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request: Tag name is missing or invalid."
          },
          "500": {
            "description": "Internal Server Error: Failed to retrieve products."
          }
        }
      }
    },
    "/products/brands": {
      "get": {
        "summary": "Retrieve all brands with total product count",
        "description": "Returns a list of all brands and the number of products associated with each brand.",
        "responses": {
          "200": {
            "description": "A list of brands and their total products successfully retrieved.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/BrandTotal"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error: Failed to retrieve brands."
          }
        }
      }
    },
    "/products": {
      "get": {
        "summary": "Retrieve all products with optional filters, pagination, and sorting",
        "description": "Returns a paginated and sortable list of all products. Filters can be applied by brand.",
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            },
            "description": "The page number for pagination."
          },
          {
            "in": "query",
            "name": "sort",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["price"]
            },
            "description": "The field to sort by. Currently supports 'price'."
          },
          {
            "in": "query",
            "name": "order",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["asc", "desc"],
              "default": "asc"
            },
            "description": "The sort order. 'asc' for ascending, 'desc' for descending."
          },
          {
            "in": "query",
            "name": "brands",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "A comma-separated list of brand names to filter products by. Example: 'Apple,Samsung'."
          }
        ],
        "responses": {
          "200": {
            "description": "A paginated list of products successfully retrieved.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedProductsResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error: Failed to retrieve products."
          }
        }
      }
    },
    "/products/category/{category_name}": {
      "get": {
        "summary": "Retrieve products by category with optional filters, pagination, and sorting",
        "description": "Returns a paginated and sortable list of products belonging to a specific category. Filters can be applied by brand.",
        "parameters": [
          {
            "in": "path",
            "name": "category_name",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The name of the category to filter products by."
          },
          {
            "in": "query",
            "name": "page",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            },
            "description": "The page number for pagination."
          },
          {
            "in": "query",
            "name": "sort",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["price"]
            },
            "description": "The field to sort by. Currently supports 'price'."
          },
          {
            "in": "query",
            "name": "order",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["asc", "desc"],
              "default": "asc"
            },
            "description": "The sort order. 'asc' for ascending, 'desc' for descending."
          },
          {
            "in": "query",
            "name": "brands",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "A comma-separated list of brand names to filter products by. Example: 'Apple,Samsung'."
          }
        ],
        "responses": {
          "200": {
            "description": "A paginated list of products successfully retrieved.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedProductsResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request: Category name is missing or invalid."
          },
          "500": {
            "description": "Internal Server Error: Failed to retrieve products."
          }
        }
      }
    },
    "/products/{id}": {
      "get": {
        "summary": "Retrieve product details by ID",
        "description": "Returns the complete details of a single product, including related information like colors, storage, and specifications.",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "The unique ID of the product."
          }
        ],
        "responses": {
          "200": {
            "description": "Product details successfully retrieved.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/ProductDetails"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request: Invalid product ID format."
          },
          "404": {
            "description": "Not Found: Product with the given ID was not found."
          },
          "500": {
            "description": "Internal Server Error: Failed to retrieve product details."
          }
        }
      }
    },
    "/products/related/{brand}": {
      "get": {
        "summary": "Retrieve related products by brand",
        "description": "Returns a list of products from a specified brand. This is typically used to show related items on a product page.",
        "parameters": [
          {
            "in": "path",
            "name": "brand",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The brand name to filter related products by."
          }
        ],
        "responses": {
          "200": {
            "description": "A list of related products successfully retrieved.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/ProductCard"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request: Brand name is missing or invalid."
          },
          "500": {
            "description": "Internal Server Error: Failed to retrieve related products."
          }
        }
      }
    },
    "/categories": {
      "get": {
        "summary": "Retrieve all categories",
        "description": "Returns a list of all categories, including their name, ID, and icon URL.",
        "responses": {
          "200": {
            "description": "A list of categories successfully retrieved.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Category"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error: Failed to retrieve categories."
          }
        }
      }
    },
    "/reviews/comments/{product_id}": {
      "get": {
        "summary": "Retrieve review comments by product ID",
        "description": "Returns a paginated list of review comments for the specified product.",
        "parameters": [
          {
            "in": "path",
            "name": "product_id",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Product ID to fetch comments for."
          },
          {
            "in": "query",
            "name": "page",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            },
            "description": "Page number for pagination."
          },
          {
            "in": "query",
            "name": "limit",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 3
            },
            "description": "Number of comments per page."
          }
        ],
        "responses": {
          "200": {
            "description": "Paginated list of review comments successfully returned.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "name_user": {
                            "type": "string"
                          },
                          "url_image_user": {
                            "type": [
                              "string",
                              "null"
                            ]
                          },
                          "message": {
                            "type": "string"
                          },
                          "rating": {
                            "type": "integer"
                          },
                          "created_at": {
                            "type": "string",
                            "format": "date-time"
                          }
                        }
                      }
                    },
                    "metadata": {
                      "type": "object",
                      "properties": {
                        "current_page": {
                          "type": "integer"
                        },
                        "next_page": {
                          "type": "boolean"
                        },
                        "size_page": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request: product_id must be a number."
          },
          "500": {
            "description": "Internal error: failed to retrieve comments."
          }
        }
      }
    },
    "/reviews/summary/{product_id}": {
      "get": {
        "summary": "Get review summary by product ID",
        "description": "Returns a statistical summary of the reviews for the specified product.",
        "parameters": [
          {
            "in": "path",
            "name": "product_id",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Product ID to fetch the review summary for."
          }
        ],
        "responses": {
          "200": {
            "description": "Review summary successfully returned.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "reviews": {
                      "type": "integer"
                    },
                    "excellent": {
                      "type": "integer"
                    },
                    "good": {
                      "type": "integer"
                    },
                    "average": {
                      "type": "integer"
                    },
                    "below_average": {
                      "type": "integer"
                    },
                    "poor": {
                      "type": "integer"
                    },
                    "media": {
                      "type": "number",
                      "format": "float"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request: product_id must be a number."
          },
          "500": {
            "description": "Internal error: failed to retrieve review summary."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ProductCard": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number",
            "format": "float"
          },
          "discounted_price": {
            "type": "number",
            "format": "float",
            "nullable": true
          },
          "url_image": {
            "type": "string",
            "nullable": true
          },
          "tag": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "BrandTotal": {
        "type": "object",
        "properties": {
          "brand": {
            "type": "string"
          },
          "total": {
            "type": "integer"
          }
        }
      },
      "PaginatedProductsResponse": {
        "type": "object",
        "properties": {
          "metadata": {
            "$ref": "#/components/schemas/PaginationMetadata"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ProductCard"
            }
          }
        }
      },
      "PaginationMetadata": {
        "type": "object",
        "properties": {
          "total_pages": {
            "type": "integer"
          },
          "actual_page": {
            "type": "integer"
          },
          "total_items": {
            "type": "integer"
          }
        }
      },
      "ProductDetails": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "brand": { "type": "string" },
          "price": { "type": "number", "format": "float" },
          "discounted_price": {
            "type": "number",
            "format": "float",
            "nullable": true
          },
          "stock": { "type": "integer" },
          "url_image": { "type": "string", "nullable": true },
          "tag": { "type": "string", "nullable": true },
          "category": {
            "type": "object",
            "properties": {
              "id": { "type": "integer" },
              "name": { "type": "string" }
            }
          },
          "colors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "integer" },
                "hex_code": { "type": "string" },
                "name": { "type": "string" }
              }
            }
          },
          "storage_options": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "integer" },
                "size": { "type": "string" }
              }
            }
          },
          "specs": {
            "type": "object",
            "nullable": true,
            "properties": {
              "id": { "type": "integer" },
              "screen_size": { "type": "string" },
              "cpu": { "type": "string" },
              "total_cores": { "type": "string" },
              "main_camera": { "type": "string" },
              "front_camera": { "type": "string" },
              "battery": { "type": "string" }
            }
          }
        }
      },
      "Category": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "url_icon": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  }
}
